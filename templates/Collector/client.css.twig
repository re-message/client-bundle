.rm-subjects .flex {
    display: flex;
    flex-direction: row;
}

.rm-subjects .photo {
    width: 80px;
    height: 80px;
    border-radius: 30px;
    margin-right: 20px;
}

.rm-subjects .photo.initials {
    display: flex;
    justify-content: center;
    align-items: center;

    color: white;
    background: var(--color-success);
    font-weight: bold;
}

.rm-subjects .text {
    display: flex;
    flex-direction: column;
    justify-content: center;

    height: 80px;

    text-align: left;
}

.rm-subjects .name {
    font-size: 16px;
    font-weight: bold;
}

.rm-subjects .id {
    font-size: 14px;
}
