{
    "name": "relmsg/client-bundle",
    "description": "A Relations Messenger Client Bundle for Symfony",
    "type": "symfony-bundle",
    "license": "Apache-2.0",
    "homepage": "https://dev.relmsg.ru/packages/client-bundle",
    "authors": [
        {
            "name": "Oleg Kozlov",
            "email": "h1karo@relmsg.ru",
            "homepage": "https://rel.ms/h1karo",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "RM\\Bundle\\ClientBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RM\\Bundle\\ClientBundle\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",

        "relmsg/client": "^0.8.0",
        "relmsg/message-bundle": "^2.0.0",

        "symfony/http-client": "^6.0",
        "symfony/event-dispatcher": "^6.0",
        "symfony/framework-bundle": "^6.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.2",

        "symfony/browser-kit": "^6.0",
        "symfony/phpunit-bridge": "^6.0",

        "symfony/twig-bundle": "^6.0",
        "symfony/twig-bridge": "^6.0",
        "symfony/monolog-bundle": "^3.5",
        "symfony/web-profiler-bundle": "^6.0",
        "twig/twig": "^3.0",

        "doctrine/orm": "^2",

        "vimeo/psalm": "^4.18",
        "psalm/plugin-phpunit": "^0.16",
        "psalm/plugin-symfony": "^3.1.2",

        "roave/security-advisories": "dev-latest"
    },
    "suggest": {
        "doctrine/orm": "To use Relations Messenger Entities as Doctrine Entities."
    },
    "config": {
        "sort-packages": false,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    }
}
